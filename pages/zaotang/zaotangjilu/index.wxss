.scroll-body {
    height: calc(100vh - 44px);
    position: relative;
    width: 100%;
}

.list-body {
    height: 100%;
    left: 5%;
    position: relative;
    width: 90%;
}

.list-body>.card {
    background: #fff;
    background-image: linear-gradient(90deg,#66a6ff,#89f7fe);
    border-radius: 32rpx;
    box-shadow: 0 0 20rpx hsla(0,0%,71%,.4);
    color: #fff;
    margin: 32rpx 0;
    padding: 28rpx 0;
    position: relative;
    width: 100%;
}

.card:active {
    background-color: #fafafa;
}

.card>.title {
    font-size: .9rem;
    font-weight: 700;
    padding: 0 0 12rpx 32rpx;
}

.card>.row {
    color: #fff;
    opacity: .8;
    overflow: hidden;
    padding-left: 32rpx;
    position: relative;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 100%;
}

.row>.time {
    font-weight: 700;
    position: absolute;
    right: 64rpx;
    top: 0;
}

.card .tag {
    display: inline;
    margin-left: 6rpx;
}

.status {
    display: inline-block;
    position: absolute;
    right: 32rpx;
}