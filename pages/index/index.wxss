page {
    background-image: linear-gradient(#e2ebf0,#cfd9df);
    color: #444;
}

.studentPage {
    background-image: linear-gradient(#425ebf,#2caed9);
    color: #fff;
    height: 100vh;
    width: 100%;
}

.studentPage .user-text {
    color: #fff!important;
    opacity: .8;
}

.mask {
    position: absolute;
    top: 0;
    z-index: 99;
}

.loading-page,.mask {
    height: 100vh;
    width: 100%;
}

.loading-page {
    position: relative;
}

.loading-page>.icon {
    position: absolute;
    text-align: center;
    top: 50%;
    width: 100%;
}

.shouQuan-page {
    height: 100vh;
}

.shouQuan-page>.logo {
    height: 240rpx;
    left: 50%;
    position: absolute;
    top: 220rpx;
    transform: translateX(-50%);
    width: 240rpx;
}

.shouQuan-page>.logo-text {
    font-size: 1.2rem;
    font-weight: 700;
    position: absolute;
    text-align: center;
    top: 500rpx;
    width: 100%;
}

.shouQuan-page>.input-area {
    left: 5%;
    position: absolute;
    top: 630rpx;
    width: 90%;
}

.input-area>.title {
    color: #7d8991;
    font-size: .8rem;
    padding: 0 12rpx 12rpx;
}

.input-area>.input-box {
    border-radius: 12rpx;
    box-shadow: 0 0 24rpx hsla(0,0%,74%,.4);
    overflow: hidden;
    width: 100%;
}

.shouQuan-page>.input-btn {
    border-radius: 12rpx;
    bottom: 30rpx;
    left: 5%;
    overflow: hidden;
    position: absolute;
    width: 90%;
}

.input-btn>.copyright {
    color: #aaa;
    font-size: .6rem;
    padding-top: 32rpx;
    text-align: center;
}

.xieyi-body {
    color: #888;
    margin-top: 12rpx;
    position: relative;
    white-space: nowrap;
}

.xieyi-body>text:active {
    opacity: .8;
}

.user-info {
    padding: 36rpx;
    position: absolute;
    width: 100%;
}

.user-info>.avatar {
    border-radius: 60rpx;
    height: 120rpx;
    position: absolute;
    top: 140rpx;
    width: 120rpx;
}

.user-info>.user-name {
    font-size: 1.2rem;
    font-weight: 700;
    left: 175rpx;
    position: absolute;
    top: 145rpx;
}

.user-name>.name {
    display: inline-block;
    max-width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.user-info>.user-text {
    color: #888;
    font-size: .8rem;
    left: 175rpx;
    position: absolute;
    top: 205rpx;
    width: 520rpx;
}

.studentTag {
    background: #58c9ef;
    margin-left: 16rpx;
    position: relative;
    top: -14rpx;
}

.idCard,.studentTag {
    border-radius: 8rpx;
    color: #fff;
    display: inline-block;
    font-size: .8rem;
    font-weight: 400;
    padding: 2rpx 16rpx;
}

.idCard {
    background: #09b9ff;
    position: absolute;
    right: 42rpx;
    top: -2rpx;
    top: 42rpx;
}

.menu-body {
    animation: a-menuBox .3s ease-out forwards;
    background-color: #fff;
    border-top-left-radius: 50rpx 30rpx;
    border-top-right-radius: 50rpx 30rpx;
    bottom: 0;
    box-shadow: 0 0 32rpx hsla(0,0%,74%,.4);
    position: absolute;
    width: 100%;
}

.menu-body>.sub-title {
    color: #666;
    display: inline-block;
    font-weight: 700;
    padding: 42rpx 50rpx 24rpx;
}

.menu-body>.verify-body {
    padding: 0 50rpx;
    position: relative;
}

.menu-body>.copyright {
    bottom: 30rpx;
    color: #aaa;
    font-size: .6rem;
    opacity: .5;
    position: absolute;
    text-align: center;
    width: 100%;
}

.verify-body>.verify-code {
    color: #43bd53;
    font-size: 1.5rem;
}

.verify-body>.refresh {
    color: #888;
    position: absolute;
    right: 42rpx;
    top: 12rpx;
}

.add {
    float: right;
    margin-right: 30rpx;
    margin-top: 32rpx;
}

.time-tips {
    color: #aaa;
    display: inline;
    font-weight: 400;
}

.times {
    font-size: 1.2rem;
    font-weight: 700;
    position: absolute;
    text-align: center;
    top: 50%;
    transform: translateY(150rpx);
    width: 100%;
}

.refresh:active {
    opacity: .7;
}

.icon-body {
    padding: 0 25rpx;
}

.icon-menu {
    display: inline-block;
    height: 200rpx;
    margin: 20rpx 16rpx 0;
    position: relative;
    vertical-align: top;
    width: 143rpx;
}

.icon-menu image {
    height: 130rpx;
    left: 50%;
    position: absolute;
    transform: translateX(-50%);
    width: 130rpx;
}

.icon-menu .text {
    bottom: 25rpx;
}

.icon-menu .text,.icon-menu .texts {
    color: #777;
    font-size: .6rem;
    position: absolute;
    text-align: center;
    width: 100%;
}

.icon-menu .texts {
    top: 142rpx;
}

.tips {
    position: absolute;
    top: 50%;
    transform: translateY(-60%);
}

.tips,.warn-icon {
    text-align: center;
    width: 100%;
}

.warn-icon {
    color: #f55;
    font-size: 8rem;
    position: relative;
}

.warn-tips {
    font-size: .8rem;
    margin: auto;
    position: relative;
    top: -60rpx;
    width: 90%;
}

.radioA {
    right: 420rpx;
}

.radioA,.radioB {
    position: absolute;
    top: 0;
}

.radioB {
    right: 270rpx;
}

.radioC {
    right: 145rpx;
}

.loginBtn,.radioC {
    position: absolute;
    top: 0;
}

.loginBtn {
    right: 0;
}

@-webkit-keyframes a-menuBox {
    0% {
        top: 600rpx;
    }

    100% {
        top: 300rpx;
    }
}

@keyframes a-menuBox {
    0% {
        top: 600rpx;
    }

    100% {
        top: 300rpx;
    }
}