.scroll-body {
    height: calc(100vh - 44px);
}

.list-body,.scroll-body {
    position: relative;
    width: 100%;
}

.list-body {
    height: 100%;
}

.total {
    background-color: #fff;
    color: #aaa;
    font-size: .5rem;
    padding: 0 32rpx 12rpx;
}

.empty-box {
    color: #aaa;
    left: 50%;
    position: absolute;
    text-align: center;
    top: 50%;
    transform: translate(-50%,-50%);
}

.empty-icon {
    display: block;
    height: 170rpx;
    width: 212rpx;
}

.btn-list {
    bottom: 0;
    position: absolute;
    width: 100%;
}